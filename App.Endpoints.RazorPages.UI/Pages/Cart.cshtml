@page "/cart"
@model App.Endpoints.RazorPages.UI.Pages.CartModel
@{
}

<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="index.html" rel="nofollow">صفحه اصلی<i class="fi-rs-home mr-5"></i></a>
                <span></span> فروشگاه
                <span></span> سبد خرید
            </div>
        </div>
    </div>
    <div class="container mb-80 mt-50">
        <div class="row">
            <div class="col-lg-8 mb-40">
                <h1 class="heading-2 mb-10">سبد خرید</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="table-responsive shopping-summery">
                    <table class="table table-wishlist">
                        <thead>
                            <tr class="main-heading">
                                <th scope="col" colspan="2">محصولات</th>
                                <th scope="col">قیمت</th>
                                <th scope="col">تعداد</th>
                                <th scope="col">مجموع</th>
                                <th scope="col" class="end">حذف</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.orders)
                            {
                                <tr class="pt-30">
                                    <td class="product-des product-name">
                                        <h6 class="mb-5"><a class="product-name mb-10 text-heading" href="shop-product-right.html">@item.ProductName</a></h6>
                                    </td>
                                    <td class="price" data-title="Price">
                                        <h4 class="text-body">@item.ProductPrice</h4>
                                    </td>
                                    <td class="text-center detail-info" data-title="Stock">
                                        <div class="detail-extralink mr-15">
                                            @item.Quantity
                                        </div>
                                    </td>
                                    <td class="price" data-title="SumPrice">
                                        <h4 class="text-body">@item.SumProductPrice</h4>
                                    </td>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="ms-1">
                                    <td class="action text-center" data-title="Remove"><button type="submit" href="#" class="text-body"><i class="fi-rs-trash"></i></button></td>
                                    </form>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="divider-2 mb-30"></div>
                <div class="cart-action d-flex justify-content-between">
                    <form method="post" asp-page-handler="Buy">
                    <button type="submit" class="btn "><i class="fi-rs-arrow-left mr-10"></i>تایید خرید</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>