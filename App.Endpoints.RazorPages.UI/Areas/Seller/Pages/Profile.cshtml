@page
@model App.Endpoints.RazorPages.UI.Areas.Seller.Pages.ProfileModel
@{
}

<div class="body d-flex py-3">
    <div class="container-xxl">
        <div class="row align-items-center">
            <div class="border-0 mb-4">
                <div class="card-header py-3 no-bg bg-transparent d-flex align-items-center px-0 justify-content-between border-bottom flex-wrap">
                    <h3 class="fw-bold mb-0">ویرایش مشخصات</h3>
                </div>
            </div>
        </div> <!-- Row end  -->

        <div class="row g-3 mb-3">
            <div class="col-xl-12 col-lg-12">
                <form method="post" asp-page-handler="Update" enctype="multipart/form-data">
                    <div class="card mb-3">
                        <div class="card-header py-3 d-flex justify-content-between bg-transparent border-bottom-0">
                            <h6 class="mb-0 fw-bold ">اطلاعات</h6>
                        </div>
                        <div class="card-body">
                            <div class="row g-3 align-items-center">
                                <div class="col-md-6">
                                    <label class="form-label">نام</label>
                                    <input type="text" class="form-control" name="FirstName">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">نام خانوادگی</label>
                                    <input type="text" class="form-control" name="LastName">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">ایمیل</label>
                                    <input type="text" class="form-control" name="Email">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">تلفن همراه</label>
                                    <input type="text" class="form-control" name="PhoneNumber">
                                    <input type="hidden" class="form-control" id="id" name="Id">
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-set-task w-sm-100 py-2 px-5 text-uppercase">ذخیره</button>
                </form>
            </div>
        </div><!-- Row end  -->
    </div>
</div>